{% extends "UekDemoBundle::bars.html.twig" %}

{% block header %}
	<h3>Kupione filmy</h3>
{% endblock %}
{% block content %}

	<div class="panel-body">
		{% if wypozyczenia|length == 0 %}
			<div class="alert alert-info" role="alert">Żaden film nie został kupiony</div>
			{% else %}
			<table class="table table-hover">
				<thead>  
					<tr>  
						<th>Tytuł</th>  
						<th>Opłata</th>
						<th>Nazwa użytkownika</th>
						<th></th>
					</tr>  
				</thead>  
			<tbody>
			{% for item in wypozyczenia %}
				<tr>	 
					 <td>{{ item.tytulfilmu|upper }}</td>
					 <td>{{ item.oplata }}</td> 
					 <td>{{ item.username }}</td> 
					 <td><a href="{{path('uek_demo_wypozyczenia_see', {'tytulfilmu': item.tytulfilmu})}}" class="btn btn-primary btn-log">Oglądaj</a></td>
				</tr>	 
			{% endfor %}
			</tbody>
			</table>
		{% endif %}
	</div>
{% endblock %}