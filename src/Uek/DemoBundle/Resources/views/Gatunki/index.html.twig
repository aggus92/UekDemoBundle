{% extends "UekDemoBundle::bars.html.twig" %}

{% block header %}
	<h1>Lista Gatunków Filmów</h1>
{% endblock %}
{% block content %}

	<div class="panel-body">
			<table class="table table-hover">
				<thead>  
					<tr>  
						<th>Gatunki</th>  
					</tr>  
				</thead>  
			<tbody>
			{% for item in gatunki %}
				<tr>	 
					 <td>{{ item.gatunek }}</td> 
				</tr>	 
			{% endfor %}
			</tbody>
			</table>
	</div>

{% endblock %}