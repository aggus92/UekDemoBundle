{% extends "UekDemoBundle::bars.html.twig" %}

{% block header %}
	<h3>Lista Gatunków Filmów</h3>
{% endblock %}
{% block content %}

	<div class="panel-body">
			<table class="table table-hover">
				<thead>  
					<tr>  
						<th>Gatunki</th>  
					</tr>  
				</thead>  
			<tbody>
			{% for item in gatunki %}
				<tr>	 
					 <td><a href="{{path('uek_demo_filmy_show', {'gatunek': item.gatunek})}}">{{ item.gatunek }}</a></td> 
				</tr>	 
			{% endfor %}
			</tbody>
			</table>
	</div>

{% endblock %}