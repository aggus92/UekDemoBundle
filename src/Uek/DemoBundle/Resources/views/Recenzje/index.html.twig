{% extends "UekDemoBundle::bars.html.twig" %}

{% block main %}
	{% for item in ilosc %}
		<span class="badge">{{item.ilosc}}</span>
	{% endfor %}	
{% endblock %}

{% block header %}
	<h3>Lista Recenzji</h3>
{% endblock %}

{% block content %}		
	<div>
		{% for filmy in filmy %}
			<a class="btn btn-primary" tabindex="-1" href="{{path('uek_demo_recenzja_index', 
			{'id': filmy.idfilmu})}}">{{ filmy.tytulfilmu }}</a>
		{% endfor %}
	</div>
	<div class="panel-body">
		{% if recenzja|length == 0 %}
			<div class="alert alert-info" role="alert">Nikt jeszcze nie dodał recenzji do tego filmu</div>
			{% else %}
			<table class="table table-hover">
				<thead>  
					<tr>  
						<th>IdRecenzji</th> 
						<th>Treść</th>
						<th>Autor</th>
					</tr>  
				</thead>  
			<tbody>
			{% for item in recenzja %}
				<tr>	 
					 <td>{{ item.idrecenzji }}</td> 
					 <td>{{ item.tresc }}</td> 
					 <td>{{ item.autor }}</td> 
				</tr>	 
			{% endfor %}
			</tbody>
			</table>
		{% endif %}
	</div>
{% endblock %}