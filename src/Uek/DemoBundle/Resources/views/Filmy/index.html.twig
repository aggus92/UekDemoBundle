{% extends "UekDemoBundle::bars.html.twig" %}

{% block header %}
	<h1>Lista Filmów</h1>
{% endblock %}
{% block content %}

	<div class="panel-body">
		{% if filmy|length == 0 %}
			<div class="alert alert-info" role="alert">Nikt jeszcze nie dodał filmów</div>
			{% else %}
			<table class="table table-hover">
				<thead>  
					<tr>  
						<th>IdFilmu</th>  
						<th>Tutuł</th>  
						<th>Opis</th>
						<th>Cena</th>
					</tr>  
				</thead>  
			<tbody>
			{% for item in filmy %}
				<tr>	 
					 <td>{{ item.idFilmu }}</td> 
					 <td>{{ item.TytulFilmu|upper }}</td> 
					 <td>{{ item.Opis }}</td> 
					 <td>{{ item.oplata }}</td>
				</tr>	 
			{% endfor %}
			</tbody>
			</table>
		{% endif %}
	</div>

{% endblock %}