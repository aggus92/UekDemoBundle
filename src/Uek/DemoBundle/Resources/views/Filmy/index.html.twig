{% extends "UekDemoBundle::bars.html.twig" %}

{% block main %}
	{% for item in ilosc %}
		<span class="badge">{{item.ilosc}}</span>
	{% endfor %}	
{% endblock %}

{% block header %}
	<h3>Lista Filmów</h3>
{% endblock %}

{% block content %}
	<div class="panel-body">
		{% if filmy|length == 0 %}
			<div class="alert alert-info" role="alert">Nikt jeszcze nie dodał filmów</div>
			{% else %}
			<table class="table table-hover">
				<thead>  
					<tr>  
						<th>IdFilmu</th>  
						<th>Tutuł</th>  
						<th>Opis</th>
						<th>Cena</th>
						<th>Okładka</th>
					</tr>  
				</thead>  
			<tbody>
			{% for item in filmy %}
				<tr>	 
					 <td>{{ item.idFilmu }}</td> 
					 <td><a href="{{path('uek_demo_filmy_see', {'id': item.idFilmu})}}">{{ item.TytulFilmu|upper }}</a></td> 
					 <td>{{ item.Opis }}</td> 
					 <td>{{ item.oplata }}</td>
					 <td>
						<a href="{{path('uek_demo_filmy_see', {'id': item.idFilmu})}}">
							<img src="{{asset('bundles/uekdemo/images/' ~ item.TytulFilmu ~ '.jpg')}}" alt="filmy" class="img-responsive" width="40" height="10">
						</a>
					</td>
				</tr>	 
			{% endfor %}
			</tbody>
			</table>
		{% endif %}
	</div>
{% endblock %}